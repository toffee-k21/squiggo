generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  username  String
  email     String   @unique
  password  String
  photo     String?
  rooms     Room[]
}

model Room {
  id        String      @id @default(cuid())
  createdAt DateTime    @default(now())
  adminId   String
  mode      String
  round     Int         @default(3)
  hint      Int         @default(1)
  drawTime  Int         @default(60)
  admin     User        @relation(fields: [adminId], references: [id])
}

